# Make `r` reload the config file
unbind r
bind r source-file ~/.tmux.conf; display "Config file at '~/.tmux.conf' reloaded!"

# Mouse mode keys
bind m set -g mouse on
bind M set -g mouse off

# Split window for human
bind | split-window -h
bind - split-window -v

# Resize pane
bind -r C-k resizep -U 10
bind -r C-j resizep -D 10
bind -r C-h resizep -L 10
bind -r C-l resizep -R 10
